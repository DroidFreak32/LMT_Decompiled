<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LMT" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="Theme.LMT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LMT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LMT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>